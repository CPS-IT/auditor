{
  "name": "cpsit/auditor",
  "description": "Audit PHP application bundles.",
  "license": "GPL-2.0-or-later",
  "type": "composer-plugin",
  "require": {
    "php": ">=7.0.0 <7.3.0",
    "composer-plugin-api": "^1.0.0",
    "ocramius/package-versions": "^1.3.0"
  },
  "authors": [
    {
      "name": "Dirk Wenzel",
      "email": "dirk.wenzel@cps-it.de"
    }
  ],
  "config": {
    "vendor-dir": ".build/vendor",
    "bin-dir": ".build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .build/log/coverage/"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5.0 || ^7.0.0",
    "composer/composer": "^1.6.3"
  },
  "autoload": {
    "psr-4": {
      "CPSIT\\Auditor\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CPSIT\\Auditor\\Tests\\": "tests/"
    }
  },
  "extra": {
    "class": "CPSIT\\Auditor\\Installer"
  }
}
